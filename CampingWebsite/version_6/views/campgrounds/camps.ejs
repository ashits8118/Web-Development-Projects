
<% include ../partials/header.ejs %>






<div class="container">
    
    <!--its a container-->
<header class="jumbotron">
    <!--to give the space to heading and paragraph when we shrink the browser-->
    <div class="container">
    <h1>Hello Everyone, Welcome to our Camping WebSite</h1>
    <p>Have a look at our exicting campgrounds</p>
    <p>
         <a class="btn btn-primary btn-lg" href="/campgrounds/new"> Add New Exiting Campgrounds</a>
    </p>
    </div>
</header>

        <!--style is used to arrange the images of different sizes-->
<div class="row text-center"  style="display:flex; flex-wrap: wrap;">
    <% campgrounds.forEach(function(camps){ %>

<div class ="col-md-3 col-sm-6">
    <div class="thumbnail">
            <img src="<%= camps.image %>" > 
            <div class="caption">
                    <h4> <%= camps.name %> </h4>

            </div>
             <p>
                <a href="/campgrounds/<%= camps._id %>" class="btn btn-primary">More-Info</a>
            </p>
    </div>


</div>


<% }) %>

</div>
</div>

