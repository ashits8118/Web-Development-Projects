<% include ../partials/header.ejs %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Camping WebSite</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
               <img class="img-responsive" src="<%= foundCampgrounds.image %> "></img>
            <div class="caption-full">
                <h4 class="pull-right">$9.00/night</h4>
                <h4> <a><%= foundCampgrounds.name %></a> </h4>
               <p><%= foundCampgrounds.description %></p>
               <p> 
               Submitted By 
               <em><%= foundCampgrounds.author.username%></em>
               </p>
               <a class="btn btn-primary" href="/campgrounds/<%= foundCampgrounds._id%>/edit">Edit!!</a>
               <form id="delForm" action="/campgrounds/<%= foundCampgrounds._id%>?_method=DELETE" method="POST">
                   <button class="btn btn-danger">Delete!!</button>
               </form>
            </div>
            </div>
            <div class="well">
                <div class="text-right">
                <a class="btn btn-success"
                  href="/campgrounds/<%= foundCampgrounds._id %>/comments/new">
                    Add new Comment</a> 
                </div>
                <hr>
                <% foundCampgrounds.comments.forEach(function(comment){ %>
           <div class="row">
               <div class="col-md-12">
                  <strong><%=comment.author.username %></strong> 
                   <span class="pull-right">10 days ago</span>
                   <p> 
                   <strong></strong> - <%= comment.text %> 
                   </p>
               </div>
           </div>


           <%  }) %>
            </div>
        </div>
    </div>
    
</div>



<% include ../partials/footer.ejs %>